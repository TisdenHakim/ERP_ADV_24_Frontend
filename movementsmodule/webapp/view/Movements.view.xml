<mvc:View displayBlock="true" controllerName="movementsmodule.controller.Movements" height="100%"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc">
    
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>title} ({/MovementSet/length})" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        
        <!-- DynamicPage Content -->
        <f:content>
            <Table
                id="entryList"
                mode="SingleSelectMaster"
                itemPress="onSelectionChange"
                inset="false"
                items="{
                    path: '/MovementSet',
                    sorter: {
                        path: 'Id'
                    }
                }"
                class="sapFDynamicPageAlignContent"
                width="auto">
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <SearchField search="onSearch" width="17.5rem"/>
                        <OverflowToolbarButton icon="sap-icon://add" type="Transparent" press="onAdd"/>
                        <OverflowToolbarButton icon="sap-icon://sort" type="Transparent" press="onSort"/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Id" />
                    </Column>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="Location" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Finished" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                             <Text text="{Id}" />
                            <Text text="{Type}" />
                            <Text text="{Location}" />
                            <Text text="{ path: 'MovDate', formatter: '.formatDate' }" />
                            <Text text="{Finished}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
        
        <!-- DynamicPage Footer -->
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="Accept"/>
                <Button type="Reject" text="Reject"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>
