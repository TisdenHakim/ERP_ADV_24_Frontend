<mvc:View displayBlock="true" controllerName="movementsmodule.controller.Movements" height="100%"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table
                id="movementTable"
                items="{/MovementSet}"
                headerText="Movements"
            >
            
                <columns>
                    <Column width="12em">
                        <Text text="Id" />
                    </Column>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="Location" />
                    </Column>
                    <Column>
                        <Text text="Date" />
                    </Column>
                    <Column>
                        <Text text="Finished" />
                    </Column>
                </columns>
                <items>
                       <ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <cells>
                             <Text text="{Id}" />
                            <Text text="{Type}" />
                            <Text text="{Location}" />
                            <Text text="{ path: 'MovDate', formatter: '.formatDate' }" />
                            <Text text="{Finished}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>